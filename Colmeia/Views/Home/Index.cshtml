@*div grid*@
<div id="grid">
    <div id="cabecalho">
        <div id="nome">NOME</div>
        <div id="id">ID</div>
        <div id="funcao">FUNÇÃO</div>
        <div id="espacoBranco"></div>
    </div>

    @*varre os workers para preencher a linha*@
    @foreach (var worker in Model.workers)
    {
        <div id="linhaOperario">
            <div id="linhaNome">@worker.Nome</div>
            <div id="linhaId">@worker.Id</div>
            <div id="linhaFuncao">
                @foreach (var job in worker.jobsICanDo)
                {
                    <label>@job</label>
                }
            </div>
            <div id="deletar">
                <input type="button" class="btnPrincipal" value="Deletar" onclick="location.href='@Url.Action("deleteWorker")?workerId=@(worker.Id)'">
            </div>
            @*<div id="delete"><a href="@Url.Action("deleteWorker")?workerId=@(worker.Id)">excluir</a></div>*@
            <div id="editar">
                <input type="button" class="btnPrincipal" value="Editar" onclick="location.href='@Url.Action("editWorker")?workerId=@(worker.Id)'">
                @*<a href="@Url.Action("editWorker")?workerId=@(worker.Id)">editar</a>*@
            </div>
        </div>
    }
</div>
