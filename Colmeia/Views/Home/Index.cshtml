<div id="master">

    @*div operacional*@
    <div id="operacao">
        <input type="submit" value="Adicionar Operaria" style="font-size:20px; font-family: Dotum;border-radius: 6px; border:0; color: white; background: #f26964; width:20%; height:35px;margin-right:50px; margin-top:10px;float:right; text-shadow: 1px 1px 0px rgba(0,0,0,.1); box-shadow: 0px 3px 0px #c1524e; font-weight: bold;" onclick="location.href='@Url.Action("editWorker")?workerId=0'" />
        <div>
