@model Colmeia.Models.Worker

@{
    ViewBag.Title = "Editar";
}

<style>
    input:focus,
    textarea:focus {
        outline: none;
    }

    form {
        background: #fff;
        border-radius: 6px;
        padding: 20px;
        padding-top: 30px;
        width: 300px;
        margin: 50px auto;
        box-shadow: 15px 15px 0px rgba(0,0,0,.1);
    }


    input {
        font-size:20px;
        width: 80%;
        background: #f5f5f5;
        border: 0;
        padding: 20px;
        border-radius: 6px;
        margin-bottom: 10px;
        border: 1px solid #eee;
    }

    .btn {
        position: relative;
        width: 90%;
        padding: 20px;
        margin-bottom: 10px;
        border-radius: 6px;
        border: 0;
        background: #f26964;
        font-size: 1.2em;
        color: #fff;
        text-shadow: 1px 1px 0px rgba(0,0,0,.1);
        box-shadow: 0px 3px 0px #c1524e;
    }

        .btn:active {
            top: 3px;
            box-shadow: none;
        }
</style>

<form action="@Url.Action("saveWorker")" method="post">
    <div class="form-group">
        <input placeholder="Nome do Operario" type="text" name="workerName" value="@Model.Nome" />
        <input placeholder="ID" type="number" value="@Model.Id" />
    </div>
    <input type="button" class="btn" value="Adicionar"></>
    <input type="button" class="btn" value="Voltar" onclick="location.href='@Url.Action("Return")'"></>

</form>